{
    "name": "pdefuse-it-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.76",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "bootstrap": "^5.3.2",
        "katex": "^0.16.11",
        "npm": "^10.4.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-markdown": "^9.0.1",
        "react-router-dom": "^6.21.3",
        "react-scripts": "5.0.1",
        "rehype-katex": "^7.0.1",
        "remark-math": "^6.0.0",
        "typescript": "^4.9.5",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test-cache-clear": "jest --clearCache",
        "test": "jest --silent --coverage",
        "test-silent": "jest --reporters jest-silent-reporter",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-silent-reporter": "^0.5.0",
        "ts-jest": "^29.1.2"
    },
    "jest": {
        "collectCoverage": true,
        "verbose": true,
        "coverageReporters": [
            "clover",
            "json",
            "lcov",
            "html",
            [
                "text",
                {
                    "skipFull": false
                },
                "text-summary",
                {
                    "skipFull": false
                }
            ]
        ],
        "roots": [
            "<rootDir>/src",
            "<rootDir>/tests"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testEnvironment": "jsdom"
    }
}
